			<sem_grp>
				<eg>법정에서 ~을 해 주십시오.</eg>
				<eg>그는 내일 있을 ~에 대비하여 그 사건에 대한 기억들을 다시 떠올려 보았다.</eg>
				<trans>testimony</trans>
				<domain></domain>
				<reg></reg>
				<con></con>
				<curs type="U"/>
				<sem_class>연설</sem_class>
				<!-- 언어행위 수정 -->
				<lr>
					<syn type="temp"></syn>
					<ant type="temp"></ant>
					<hyper>말</hyper>
					<rel>목격자</rel>
					<rel>법정</rel>
					<rel>재판</rel>
					<rel>증인</rel>
					<rel>진술</rel>
				</lr>
			</sem_grp>
			<syn_grp>
				<comb_aj type="appr">~이 불리하다</comb_aj>
				<comb_aj type="appr">~이 유리하다</comb_aj>
				<comb_aj type="magn">생생한 ~</comb_aj>
				<!-- '역사의 ~' 센스2로 수정 -->
				<comb_v type="npred_vsup">
					<form vcompound="yes">~을 하다</form>
					<!-- '~'을 '~을 하다'로 수정 -->
					<frame>X-이 Z-에게 Y-을 ~을 하다</frame>
					<frame>X-이 Z-에게 Y-에대해 ~을 하다</frame>
					<!-- 'X-이 Y-에게 Z-을|에대해 ~을 하다' 수정, 어순에 따른 Y, Z의 논항 표기를 직접목적어, 사격보어 순으로 수정, '|'로 표기된 교체 가능 정보 분할 표기 -->
					<frame>X-이 Z-에게 S것-을 ~을 하다</frame>
					<frame>X-이 Z-에게 S음-을 ~을 하다</frame>
					<!-- 별도의 n_v 구획으로 기술된 'X-이 Y-에게 S것|S음-을 ~을 하다'를 통합, 논항 표기 수정, 교체 정보를 분할 표기-->
					<frame>X-이 Z-에게 S지-을 ~을 하다</frame>
					<!-- 추가함, 표준사전 참조 -->
					<frame>X-이 Z-에게 S다고 ~을 하다</frame>
					<!-- 별도의 n_v 구획으로 기술된 'X-이 Y-에게 S다고 ~을 하다'를 통합, 논항 표기 수정 -->
				</comb_v>
				<comb_v type="npred_vsup">
					<form vcompound="yes">~이 되다</form>
					<!-- '~'을 '~이 되다'로 수정 -->
					<frame>Y-이 ~이 되다</frame>
					<frame>S것-이 ~이 되다</frame>
					<frame>S음-이 ~이 되다</frame>
					<!-- 'Z|S것|S음-이 ~이 되다' 논항 표기 수정, 교체 정보 분할 표기 -->
				</comb_v>
				<comb_v type="npred_vpred">
				<!-- narg_vpred 수정 -->
					<form vcompound="no">~을 검토하다</form>
					<frame></frame>
				</comb_v>
				<comb_v type="npred_vpred">
				<!-- narg_vpred 수정 -->
					<form vcompound="no">~을 듣다</form>
					<frame></frame>
				</comb_v>
				<comb_v type="npred_vpred">
				<!-- narg_vpred 수정 -->
					<form vcompound="no">~을 번복하다</form>
					<frame></frame>
				</comb_v>
				<comb_v type="npred_vpred">
				<!-- narg_vpred 수정 -->
					<form vcompound="no">~을 채록하다</form>
					<frame></frame>
				</comb_v>
				<comb_v type="npred_vpred">
				<!-- narg_vpred 수정 -->
					<form vcompound="no">~에 따르다</form>
					<frame></frame>
				</comb_v>
				<comb_v type="npred_vpred">
				<!-- narg_vpred 수정 -->
					<form vcompound="no">~에 의하다</form>
					<frame></frame>
				</comb_v>
				<max_n_str>X-의 Y-에대한 ~</max_n_str>
